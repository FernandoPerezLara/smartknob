{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "features": "all",
          "target": "riscv32imac-unknown-none-elf",
          "allTargets": false,
          "loadOutDirsFromCheck": true,
          "buildScripts": {
            "enable": true
          },
          "extraEnv": {
            "CARGO_BUILD_TARGET": "riscv32imac-unknown-none-elf",
            "RUSTFLAGS": "--cfg espidf_time64 -C link-arg=--ldproxy-linker -C link-arg=rust-lld"
          }
        },
        "checkOnSave": {
          "enable": true,
          "command": "clippy",
          "extraArgs": ["--target", "riscv32imac-unknown-none-elf"]
        },
        "procMacro": {
          "enable": true,
          "attributes": {
            "enable": true
          }
        },
        "diagnostics": {
          "enable": true,
          "experimental": {
            "enable": false
          },
          "disabled": ["unresolved-proc-macro"]
        },
        "imports": {
          "granularity": {
            "group": "module"
          }
        }
      }
    }
  }
}
